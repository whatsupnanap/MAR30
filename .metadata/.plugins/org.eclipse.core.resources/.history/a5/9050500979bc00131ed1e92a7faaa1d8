//rich note: start here
var animal = ["A","B","C","D","E","F"];
//               0   1   2 ...

var counter = 0;

function nextVal() {
	if(counter === (animal.length - 1)) {
		//start at 0
		counter = 0;
		console.log("reset to 0...");
	} else {
		//counter = counter + 1; 
		counter++;
		console.log("going up 1...");
	}
}

function prevVal() {
	if(counter === 0) {
		counter = 0;
	} else {
		
	}
}
