var win = Ti.UI.createWindow({
	backgroundColor:"#fff"
});

//1. UI component, 2.progress, 3.Decent Timer, 4. listeners

var progress = Ti.UI.createProgressBar({
	min:0,
	max:100,
	value: 30,
	message:"Can you stop the progress?",
	width:"70%"
});

var randomView =Ti.UI.createView({
	width:"100",
	height:"100",
	backgroundColor:"blue",
	borderColor:"black"
	
});


var increcement = function(){
	if(progress = value < 100){
		progress.fireEvent("update",{value:1});
		//increase timer
		//move box
	}else{
		//game over message
		alert("YOU FAIL");
	}
};

var progTimer = setInterval(increcement,1000);

progress.addEventListener("update",function(e){
	progress.Value=progress.value + e.evt.value;
});

win.add(randomView);
win.add(progress);
progress.show();
win.open();

